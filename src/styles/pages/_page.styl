.page
    margin-top 125px

    h1
        text-align center
        margin-bottom 6rem

    .home__sections
        border-top 1px solid epsilon
        margin-top 30px
        padding-top 50px

        .home__sections-single
            display block
            border-bottom 1px solid epsilon
            width 95%
            margin 0 auto

            a
                width 100%
                height 100%
                display block
                padding 30px 0
                text-decoration none

            &:last-child
                border 0

            h3
                margin 0
                width 75%
                font-weight 500

            aside
                position relative
                top 0px
                margin 0
                width 25%
                float right
                font-weight 300
                color gama
